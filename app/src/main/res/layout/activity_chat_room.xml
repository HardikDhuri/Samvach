<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F8BC8"
    tools:context=".ChatRoom">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Username"
            app:subtitle="Online"
            app:menu="@menu/top_app_bar"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"/>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/type_text_layout"
        android:layout_below="@id/app_bar"
        tools:listitem="@layout/receiver_chat_ui"
        />

    <LinearLayout
        android:id="@+id/type_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="2dp">

        <EditText
            android:id="@+id/message_etv"
            android:layout_width="331dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center"
            android:background="@drawable/chat_edit_text_bg"
            android:hint="Type Here"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/send_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/send_btn_bg"
            android:layout_gravity="center"
            android:contentDescription="Send Button"
            android:src="@drawable/send_icon"/>

    </LinearLayout>

  </RelativeLayout>