<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".chat.UserProfile">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userprofile_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/default_user"
        app:border_color="@color/black"
        app:border_width="1dp" />

    <TextView
        android:id="@+id/name_txtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="@string/user_name"/>
    <TextView
        android:id="@+id/contact_txtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="9891472896"/>
    <TextView
        android:id="@+id/lastseen_txtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="lastseen"/>
    <TextView
        android:id="@+id/about_txtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="about"/>
    <TextView
        android:id="@+id/CommunityPost_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/black"
        android:maxLines="5"
        android:textSize="20sp"
        android:text="communityPost"/>
    <TextView
        android:id="@+id/mutenotification_txtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Mute notification"
        app:drawableStartCompat="@drawable/ic_baseline_notifications_24" />
    <TextView
        android:id="@+id/Disappearingmeassage_txtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Disappearing meassage"
        app:drawableStartCompat="@drawable/ic_baseline_history_toggle_off_24" />
    <TextView
        android:id="@+id/block_txtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="#ff0000"
        android:textSize="20sp"
        android:text="Block @username"
        app:drawableStartCompat="@drawable/ic_baseline_block_24" />
    <TextView
        android:id="@+id/Repot_txtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="#ff0000"
        android:textSize="20sp"
        android:text="Report @username"
        app:drawableStartCompat="@drawable/ic_baseline_thumb_down_24" />
</LinearLayout>