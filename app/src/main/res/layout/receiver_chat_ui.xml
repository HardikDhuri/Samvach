<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="5dp"
    android:layout_alignParentEnd="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:paddingEnd="10dp"
        android:background="@drawable/receive_chat_ui">

        <TextView
            android:id="@+id/receiver_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            android:maxWidth="200dp"
            android:text="Apple"
            android:textColor="#3C55AE"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/receiver_message_tv"
            android:layout_alignBottom="@+id/receiver_message_tv"
            android:text="12:30 AM"
            android:textColor="#B8B8B8"
            android:textSize="11sp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>