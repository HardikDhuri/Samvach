<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".password.Password">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/one_tv"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pass_digit_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/pass_circle"
            android:textColor="ff0000" />

        <ImageView
            android:id="@+id/pass_digit_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/pass_circle"
            android:textColor="ff0000" />

        <ImageView
            android:id="@+id/pass_digit_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/pass_circle"
            android:textColor="ff0000" />

        <ImageView
            android:id="@+id/pass_digit_4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/pass_circle"
            android:textColor="ff0000" />

        <ImageView
            android:id="@+id/pass_digit_5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/pass_circle"
            android:textColor="ff0000" />

        <ImageView
            android:id="@+id/pass_digit_6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/pass_circle"
            android:textColor="ff0000" />

    </LinearLayout>

    <TextView
        android:id="@+id/one_tv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/pass_circle"
        android:gravity="center"
        android:text="1"
        android:textColor="#ff0000"
        android:textSize="35dp" />
    <TextView
        android:id="@+id/two_tv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/pass_circle"
        android:gravity="center"
        android:text="2"
        android:layout_toRightOf="@+id/one_tv"
        android:layout_marginStart="20dp"
        android:textColor="#ff0000"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/three_tv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/pass_circle"
        android:gravity="center"
        android:text="3"
        android:layout_toRightOf="@+id/two_tv"
        android:layout_marginStart="20dp"
        android:textColor="#ff0000"
        android:textSize="35dp" />
    <TextView
        android:id="@+id/four_tv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/pass_circle"
        android:gravity="center"
        android:text="4"
        android:layout_below="@+id/one_tv"
        android:layout_marginTop="20dp"
        android:textColor="#ff0000"
        android:textSize="35dp" />
     <TextView
        android:id="@+id/five_tv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/pass_circle"
        android:gravity="center"
        android:text="5"
         android:layout_below="@id/two_tv"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/four_tv"
        android:layout_marginStart="20dp"
        android:textColor="#ff0000"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/six_tv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/pass_circle"
        android:gravity="center"
        android:text="6"
        android:layout_below="@id/three_tv"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/five_tv"
        android:layout_marginStart="20dp"
        android:textColor="#ff0000"
        android:textSize="35dp" />
    <TextView
        android:id="@+id/seven_tv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/pass_circle"
        android:gravity="center"
        android:text="7"
        android:layout_below="@+id/four_tv"
        android:layout_marginTop="20dp"
        android:textColor="#ff0000"
        android:textSize="35dp" />
    <TextView
        android:id="@+id/eight_tv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/pass_circle"
        android:gravity="center"
        android:text="8"
        android:layout_below="@id/five_tv"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/four_tv"
        android:layout_marginStart="20dp"
        android:textColor="#ff0000"
        android:textSize="35dp" />
    <TextView
        android:id="@+id/nine_tv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/pass_circle"
        android:gravity="center"
        android:text="9"
        android:layout_below="@id/six_tv"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/five_tv"
        android:layout_marginStart="20dp"
        android:textColor="#ff0000"
        android:textSize="35dp" />
    <TextView
        android:id="@+id/zero_tv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/pass_circle"
        android:gravity="center"
        android:text="0"
        android:layout_below="@id/eight_tv"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/four_tv"
        android:layout_marginStart="20dp"
        android:textColor="#ff0000"
        android:textSize="35dp" />

    <ImageView
        android:id="@+id/delete_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/nine_tv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/zero_tv"
        android:background="@drawable/pass_circle"
        android:gravity="center"
        android:padding="15dp"
        android:src="@drawable/ic_baseline_backspace_24"
        />
</RelativeLayout>